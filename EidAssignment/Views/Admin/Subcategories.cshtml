@model IEnumerable<EidAssignment.Models.SubCategory>

@{
    ViewBag.Title = "Subcategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>Subcategories</h2>

    <p>
        @Html.ActionLink("Create New", "AddSubcategories")
    </p>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Category Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descrition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Icon)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.CategoryId
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descrition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Icon)
                    </td>
                    <td>
                        <a href="~/Admin/DelSubCat/@item.Id">Delete | </a>
                        <a href="/Admin/EditSubCat/@item.Id">Edit</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>