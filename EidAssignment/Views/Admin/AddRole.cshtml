@using EidAssignment.Models
@model Role


@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Add Address Details</h2>
            <div class="panel-body">
                @using (Html.BeginForm("AddRole", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fas fa-user"></span>
                            </span>
                            @Html.TextBoxFor(x => x.Name, new { placeholder = "Enter Name", required = "required", @class = "form-control" })
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Add Role</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<div class="container text-center">
    @Html.ActionLink("Back to List", "Roles")
</div>

