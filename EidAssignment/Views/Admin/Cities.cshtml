@model List<EidAssignment.Models.City>

@{
    ViewBag.Title = "Cities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>Cities</h2>

    <p>
        @Html.ActionLink("Create New", "AddCities")
    </p>
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>Name</th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a href="~/Admin/EditCity/@item.Id">Edit| </a>
                        <a href="~/Admin/DelCity/@item.Id">Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
