@using EidAssignment.Models
@model User

@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Add User</h2>
            <div class="panel-body">
                @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fas fa-user"></span>
                            </span>
                            @Html.TextBoxFor(x => x.Name, new { placeholder = "Enter Your Name", required = "required", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fas fa-envelope"></span>
                            </span>
                            @Html.TextBoxFor(x => x.Email, new { type = "email", placeholder = "Enter Email Address", required = "required", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fas fa-phone"></span>
                            </span>
                            @Html.TextBoxFor(x => x.PhoneNo, new { placeholder = "Phone No.", required = "required", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fas fa-phone"></span>
                            </span>
                            @Html.PasswordFor(x => x.Password, new { placeholder = "Enter Your Password", required = "required", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fas fa-user"></span>
                            </span>
                            @{
                                List<Role> Roles = ViewBag.Roles as List<Role>;
                            }
                            <select required="required" class="form-control" name="RoleId">
                                <option value="0" selected="selected" disabled>- Select Role -</option>
                                @foreach (var item in Roles)
                                {
                                    <option value="@item.Id">@item.Name </option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Add </button>
                    </div>

                }

            </div>
        </div>
    </div>
</div>

<div class="container text-center">
    @Html.ActionLink("Back to List", "Users")
</div>
